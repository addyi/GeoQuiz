<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="de.eosn.geoquiz">

    <application
        android:name="de.eosn.geoquiz.application.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.eosn.geoquiz.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name="de.eosn.geoquiz.activities.BattleGroundActivity"
            android:label="@string/app_name"/>
        <activity
            android:name="de.eosn.geoquiz.activities.RoundStatisticsActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name="de.eosn.geoquiz.activities.WinnerActivity">
        </activity>
    </application>

</manifest>